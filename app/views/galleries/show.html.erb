<h2><%= @gallery.name %></h2>
<p>Proudly owned by <%= @gallery.user.email %></p>
<p><%= @gallery.description %></p>

<% @gallery.images.each do |image| %>
<%= link_to image do %>
<%= image_tag image.url%>
<% end %>

<%= link_to "Edit this image", [:edit, image] %>
Created <%= time_ago_in_words image.created_at %> ago
<% end %>

<% if current_user.id == @gallery.user_id %>
<%= link_to "Add an image", "/galleries/#{@gallery.id}/images/new" %>
<%= link_to "Edit a gallery", "/galleries/#{@gallery.id}/edit"%>
<%= link_to "Delete a gallery", "/galleries/#{@gallery.id}", method: :delete %> 

<% end %>